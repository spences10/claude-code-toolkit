{
  "description": "Toolkit-skills plugin hooks. UserPromptSubmit forces skill evaluation. Stop hook reminds about /reflect.",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skill-activation-forced-eval.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/stop-reflect-reminder.sh"
          }
        ]
      }
    ]
  }
}
